---
import "../styles/global.css";
---

<div class="not-found">
  <div class="not-found__image">
    <div class="not-found__exclamation-mark">
      <svg class="not-found__svg" viewBox="0 0 64 64" xmlns="http://www.w3.org/2000/svg">
        <circle cx="32" cy="32" r="30" fill="#f44336"></circle>
        <rect x="28" y="16" width="8" height="24" fill="#fff"></rect>
        <rect x="28" y="44" width="8" height="8" fill="#fff"></rect>
      </svg>
    </div>
  </div>
  <div class="not-found__content">
    <h1 class="not-found__title">404 - Page Not Found</h1>
    <p class="not-found__message">Sorry, the page you are looking for does not exist.</p>
    <div class="not-found__links">
      <a href="/" class="btn btn--primary not-found__link">Go to Home</a>
      <a href="/projects" class="btn btn--secondary not-found__link">View Projects</a>
    </div>
  </div>
</div>
<style>
  .not-found {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 4rem 1rem;
    text-align: center;
    height: 100vh;
    background-color: var(--card-background);
  }

  .not-found__image {
    max-width: 400px;
    margin-bottom: 2rem;
  }

  .not-found__svg {
    width: 100%;
    height: auto;
  }

  .not-found__title {
    font-size: var(--title-font-size);
    margin-bottom: 1rem;
  }

  .not-found__message {
    font-size: var(--body-font-size);
    margin-bottom: 2rem;
  }

  .not-found__links {
    display: flex;
    gap: 1rem;
    justify-content: center;
  }
</style>
